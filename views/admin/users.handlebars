<h1>餐廳後台</h1>

<a href="/admin/restaurants">
  <button type="button" class="btn btn-primary">Restaurants</button>
</a>

<a href="/admin/users">
  <button type="button" class="btn btn-primary">Users</button>
</a>

<br />
<br />

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Email</th>
      <th scope="col">Role</th>
      <th scope="col">#</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.email}}</td>
      <td>
        {{#if this.isAdmin}}
        <span>Admin</span>
        {{else}}
        <span>User</span>
        {{/if}}
      </td>
      <td>
        <form action="/admin/users/{{this.id}}?_method=PUT" method="POST" style="display: inline;">
          <button type="submit" class="btn btn-link p-0">
            {{#if this.isAdmin}}
            set as user
            {{else}}
            set as admin
            {{/if}}
          </button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>